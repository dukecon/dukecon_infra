version: "2"

networks:
  default:
  monitoring:
    external: true

services:
  grafana:
    image: grafana/grafana
    restart: always
    networks:
      - default
      - monitoring
    external_links:
<% @dukecon_docker_instances.each do |dukecon_docker_instance| -%>
      - prometheus-<%= dukecon_docker_instance['name'] %>:prometheus-<%= dukecon_docker_instance['name'] %>
<% end %>
    ports:
      - "127.0.0.1:3000:3000"
    volumes:
      - "/data/grafana/etc:/etc/grafana"
      - "/data/grafana/data:/var/lib/grafana"
